<mvc:View
  controllerName="my.products.view.Master"
  displayBlock="true"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
  <Page
    id="page"
    title="Products">
    <content>
      <List
        id="list"
        items="{/Products}"
        mode="{device>/listMode}"
        select="onSelect"
        growing="true"
        growingScrollToLoad="true">
        <items>
          <ObjectListItem
            type="{device>/listItemType}"
            press="onSelect"
            title="{Name}"
            number="{
              path: 'Price',
              formatter: 'my.products.util.Formatter.currencyValue'
            }"
            numberUnit="USD">
          </ObjectListItem>
        </items>
      </List>
    </content>
    <footer>
      <Bar>
        <contentRight>
          <Button
            icon="sap-icon://add"
            tooltip="{i18n>masterFooterAddButtonTooltip}"
            press="onAddProduct" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>
